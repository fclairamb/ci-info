{
  "version_input_file": {
    "file": "README.md",
    "pattern": "Version: ([0-9.]+)\n"
  },
  "version_input_git_tag": {
    "pattern": "^v?([0-9.]+)$"
  },
  "version_input_env_var": {
    "env_var": "VERSION",
    "pattern": "^([0-9.]+)$"
  },
  "templates": [
    {
      "input_file": "build.go.tpl",
      "output_file": "build.go"
    }
  ],
  "build_info_file": "build.json"
}